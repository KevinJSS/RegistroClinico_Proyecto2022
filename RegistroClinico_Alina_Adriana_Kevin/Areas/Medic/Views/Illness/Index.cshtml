@{
    ViewData["Title"] = "Padecimientos";
}

<div class="container p3">
    <div class="row pt-4">
        <div class="col-6 mb-5">
            <h3 class="text-primary">Padecimientos</h3>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Illness" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i>
                &nbsp; Agregar padecimiento
            </a>

        </div>
    </div>
    <table id="tblData" class="table table-bordered table-stripped" style="width:100%;">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/illness.js"></script>
}
