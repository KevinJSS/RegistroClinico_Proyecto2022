@{
    ViewData["Title"] = "Usuarios";
}

@*Tabla Administradores*@
<div class="container p3">
    <div class="row pt-4">
        <div class="col-6 mb-5">
            <h3 class="text-primary">Administradores</h3>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Admin" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i>
                &nbsp; Agregar Administrador
            </a>

        </div>
    </div>
    <table id="tblData1" class="table table-bordered table-stripped" style="width:100%;">
        <thead>
            <tr>
                <th>Cedula</th>
                <th>Nombre</th>
                <th>Correo</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>
</div>

